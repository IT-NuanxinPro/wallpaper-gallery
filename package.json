{
  "name": "wallpaper-gallery",
  "type": "module",
  "version": "2.10.0",
  "electronVersion": "1.0.0",
  "private": true,
  "main": "out/main/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "electron-vite dev",
    "build": "vite build",
    "build:electron": "electron-vite build && electron-builder",
    "build:electron:local": "electron-vite build && electron-builder --mac --arm64 --dir",
    "preview": "vite preview",
    "sync": "node scripts/sync-data.js --force",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@vant/auto-import-resolver": "^1.3.0",
    "cropperjs": "^1.6.2",
    "element-plus": "^2.13.0",
    "gsap": "^3.14.2",
    "pinia": "^3.0.4",
    "qrcode": "^1.5.4",
    "swiper": "^12.0.3",
    "vant": "^4.9.22",
    "vue": "^3.5.24",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.16",
    "electron": "39.3.0",
    "electron-builder": "^26.4.0",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.1.0",
    "fast-check": "^4.5.2",
    "husky": "^9.1.7",
    "javascript-obfuscator": "^5.1.0",
    "lint-staged": "^16.2.7",
    "postcss-pxtorem": "^6.1.0",
    "rollup-plugin-external-globals": "^0.13.0",
    "sass": "^1.97.0",
    "unplugin-auto-import": "^20.3.0",
    "unplugin-vue-components": "^30.0.0",
    "vite": "^7.2.4",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --fix"
  },
  "build": {
    "appId": "com.wallpaper-gallery.app",
    "productName": "Wallpaper Gallery",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "out/**/*"
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
